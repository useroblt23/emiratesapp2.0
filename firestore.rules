rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    ///////////////////////////////////////////////////////////////////////////
    // üßç USERS
    ///////////////////////////////////////////////////////////////////////////
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // users cannot delete themselves manually

      // Only governor can edit any profile
      allow update: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // üéì COURSES
    ///////////////////////////////////////////////////////////////////////////
    match /courses/{courseId} {
      allow read: if request.auth != null && (
        resource.data.layer == "Free" ||
        (
          resource.data.layer == "Pro" &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription in ["Pro", "VIP"]
        ) ||
        (
          resource.data.layer == "VIP" &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription == "VIP"
        )
      );

      // Mentors and governors can create or update courses
      allow create, update: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["mentor", "governor"];

      // Only course owner or governor can delete
      allow delete: if request.auth != null &&
        (resource.data.mentorId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor");
    }

    ///////////////////////////////////////////////////////////////////////////
    // üí¨ CONVERSATIONS
    ///////////////////////////////////////////////////////////////////////////
    match /conversations/{conversationId} {
      // Users can only access their own conversations
      allow read, update: if request.auth != null &&
        request.auth.uid in resource.data.participants;

      // Anyone starting a conversation must include themselves
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.participants;

      // No deletes except governor
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";

      // MESSAGES subcollection
      match /messages/{messageId} {
        allow read, list: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;

        allow create: if request.auth != null &&
          request.resource.data.senderId == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    ///////////////////////////////////////////////////////////////////////////
    // üí≠ GROUP CHAT (Public Room)
    ///////////////////////////////////////////////////////////////////////////
    match /groupChats/publicRoom/messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.resource.data.senderId == request.auth.uid;
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // ü§ñ AI TRAINER SESSIONS
    ///////////////////////////////////////////////////////////////////////////
    match /aiTrainerSessions/{sessionId} {
      allow read, update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      // Governors can view any session
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // ‚úàÔ∏è RECRUITERS & OPEN DAYS
    ///////////////////////////////////////////////////////////////////////////
    match /recruiters/{recruiterId} {
      allow read: if request.auth != null;
      // Only governor can create/update/delete
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // üßæ SUPPORT & REPORTS
    ///////////////////////////////////////////////////////////////////////////
    match /reports/{reportId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor");
      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // üìä METRICS (Governors Only)
    ///////////////////////////////////////////////////////////////////////////
    match /metrics/{metricId} {
      allow read, create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // ‚öôÔ∏è SETTINGS (Global Config)
    ///////////////////////////////////////////////////////////////////////////
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }
  }
}
