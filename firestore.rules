rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    ///////////////////////////////////////////////////////////////////////////
    // üëë UNIVERSAL GOVERNOR ACCESS (Top Priority)
    ///////////////////////////////////////////////////////////////////////////
    match /{document=**} {
      // Governors can read & write everything
      allow read, write: if request.auth != null
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "governor";
    }

    ///////////////////////////////////////////////////////////////////////////
    // üßç USERS
    ///////////////////////////////////////////////////////////////////////////
    match /users/{userId} {
      // Self access
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      // No deletion
      allow delete: if false;
    }

    ///////////////////////////////////////////////////////////////////////////
    // üí¨ CONVERSATIONS (Private 1-on-1 and Groups)
    ///////////////////////////////////////////////////////////////////////////
    match /conversations/{conversationId} {
      allow read, update: if request.auth != null &&
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null &&
        request.auth.uid in request.resource.data.participants;
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if request.auth != null &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if request.auth != null &&
          request.resource.data.senderId == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow delete: if false;
      }
    }

    ///////////////////////////////////////////////////////////////////////////
    // üí≠ GROUP CHAT (Public Room)
    ///////////////////////////////////////////////////////////////////////////
    match /groupChats/publicRoom/messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
        request.resource.data.senderId == request.auth.uid;
      allow delete: if false;
    }

    ///////////////////////////////////////////////////////////////////////////
    // üéì COURSES
    ///////////////////////////////////////////////////////////////////////////
    match /courses/{courseId} {
      allow read: if request.auth != null && (
        resource.data.layer == "Free" ||
        (
          resource.data.layer == "Pro" &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription in ["Pro", "VIP"]
        ) ||
        (
          resource.data.layer == "VIP" &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscription == "VIP"
        )
      );

      allow create, update: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ["mentor"];
      allow delete: if request.auth != null &&
        resource.data.mentorId == request.auth.uid;
    }

    ///////////////////////////////////////////////////////////////////////////
    // ü§ñ AI TRAINER
    ///////////////////////////////////////////////////////////////////////////
    match /aiTrainerSessions/{sessionId} {
      allow read, update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
    }

    ///////////////////////////////////////////////////////////////////////////
    // üéØ OPEN DAY SIMULATIONS & QUIZZES
    ///////////////////////////////////////////////////////////////////////////
    match /open_day_simulations/{simId} {
      allow read, update, delete: if request.auth != null &&
        resource.data.user_id == request.auth.uid;
      allow create: if request.auth != null &&
        request.resource.data.user_id == request.auth.uid;
    }

    match /open_day_answers/{answerId} {
      allow read, update, delete: if request.auth != null &&
        resource.data.user_id == request.auth.uid;
      allow create: if request.auth != null &&
        request.resource.data.user_id == request.auth.uid;
    }

    ///////////////////////////////////////////////////////////////////////////
    // ‚úàÔ∏è OPEN DAYS & RECRUITERS (Admin controlled)
    ///////////////////////////////////////////////////////////////////////////
    match /open_days/{openDayId} {
      allow read: if request.auth != null;
      allow write: if false; // handled manually
    }

    match /recruiters/{recruiterId} {
      allow read: if request.auth != null;
      allow write: if false; // handled manually
    }

    ///////////////////////////////////////////////////////////////////////////
    // üßæ REPORTS & SUPPORT
    ///////////////////////////////////////////////////////////////////////////
    match /reports/{reportId} {
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      allow delete: if false;
    }

    ///////////////////////////////////////////////////////////////////////////
    // üìä METRICS (Governor already covered globally)
    ///////////////////////////////////////////////////////////////////////////
    match /metrics/{metricId} {
      allow read, write: if false; // reserved for governor global rule
    }

    ///////////////////////////////////////////////////////////////////////////
    // ‚öôÔ∏è SETTINGS (Governor handled)
    ///////////////////////////////////////////////////////////////////////////
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if false; // reserved for governor
    }

    ///////////////////////////////////////////////////////////////////////////
    // üéõÔ∏è SYSTEM CONTROL (Governor Announcements)
    ///////////////////////////////////////////////////////////////////////////
    match /systemControl/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // reserved for governor
    }
  }
}
